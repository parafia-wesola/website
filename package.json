		}
	},
	"lint-staged": {
		"*.js": [
			"prettier --config .prettierrc --write",
			"stylelint --fix",
			"eslint --fix",
			"git add"
		],
		"*.{json,md}": [
			"prettier --config .prettierrc --write",
			"git add"
		],
		"*.{css,scss}": [
			"prettier --config .prettierrc --write",
			"stylelint --fix",
			"git add"
		]
